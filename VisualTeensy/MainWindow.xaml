<Window x:Class="Board2Make.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"        
        xmlns:local="clr-namespace:Board2Make"    
        xmlns:vm ="clr-namespace:ViewModel"      
        WindowStartupLocation="CenterScreen"
        Height="670" Width="1100" Title="{Binding Title}" Closing="Window_Closing">
    <Window.DataContext>
        <vm:MainVM/>
    </Window.DataContext>
   

    <TabControl Margin="20">
        <TabItem Header="Project">
            <local:ProjectTab DataContext="{Binding projecTabVM, Mode=OneWay}"/>
        </TabItem>
        <TabItem Header="Setup">
            <local:SetupTab DataContext="{Binding setupTabVM, Mode=OneWay}"/>
        </TabItem>
    </TabControl>
</Window>
