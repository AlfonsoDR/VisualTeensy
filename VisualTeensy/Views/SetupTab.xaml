<UserControl x:Class="VisualTeensy.SetupTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualTeensy"
             xmlns:vm ="clr-namespace:ViewModel"
             Background="White"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:SetupTabVM, IsDesignTimeCreatable=False}" 
             >
    <Border Grid.Column="0" Grid.Row="1" BorderThickness="2" BorderBrush="LightGray" Margin="10" Padding="10" CornerRadius="10" >
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Width="auto" Margin="0,0,0,0" HorizontalAlignment="Stretch"  >
                <TextBlock TextWrapping="Wrap" Margin="0,20,0,0" >
                   <Run FontSize="16" FontWeight="Bold">  GNU Make </Run><LineBreak/>
                    The project setup uses GNU Make for Windows to build the project. You can download it from e.g. here:
                    <Hyperlink NavigateUri="http://www.equation.com/servlet/equation.cmd?fa=make" RequestNavigate="Hyperlink_RequestNavigate" >
                       http://www.equation.com/servlet/equation.cmd?fa=make
                    </Hyperlink>
                </TextBlock>

                <Label   Content="Path to GNU Make (required)" FontSize="10" Padding="0" Margin="0,5,0,0" />
                <local:PSelector SelectedPath="{Binding  makePath, ValidatesOnDataErrors=True}" Style="{DynamicResource ValidatingControl}"  />

                <TextBlock Text="Teensy Uploader"  Margin="0,20,0,0"/>

                <!--<TextBlock TextWrapping="Wrap" Margin="0,20,0,0" TextAlignment="Justify">
                   <Run FontSize="16" FontWeight="Bold">  Uploading </Run><LineBreak/>
                    To upload firmware to the controller, VisualTeensy supports the PJRC Teensy Uploader and TyCommander. TyCommander includes a serial 
                    terminal and can handle uploads to more than one Controller. (Note: The path to the PJRC Teensy uploader is required for 'Expert Setups' only)
                    (You can download TyTools here:
                    <Hyperlink NavigateUri="https://github.com/Koromix/tytools" RequestNavigate="Hyperlink_RequestNavigate" >
                        https://github.com/Koromix/tytools
                    </Hyperlink>
                </TextBlock>-->

                <Label   Content="Path to the Teensy Uploader" FontSize="10" Padding="0" Margin="0,10,0,0" />
                <local:PSelector SelectedPath="{Binding  uploadPjrcPath, ValidatesOnDataErrors=True}" isFolderDialog="True" Style="{DynamicResource ValidatingControl}" />

                <Label   Content="Path to the TyTools (optional)" FontSize="10" Padding="0" Margin="0,10,0,0" />
                <local:PSelector SelectedPath="{Binding  uploadTyPath, ValidatesOnDataErrors=True}" isFolderDialog="True" Style="{DynamicResource ValidatingControl}" />

                <Label   Content="Path to your Arduino installation" FontSize="10" Padding="0" Margin="0,10,0,0" />
                <local:PSelector SelectedPath="{Binding arduinoBase, ValidatesOnDataErrors=True}" isFolderDialog="True" Style="{DynamicResource ValidatingControl}"  />
            </StackPanel>


        </Grid>
    </Border>
</UserControl>
