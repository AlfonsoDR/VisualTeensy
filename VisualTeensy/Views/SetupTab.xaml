<UserControl x:Class="VisualTeensy.SetupTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualTeensy"
             xmlns:vm ="clr-namespace:ViewModel"
             Background="White"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:SetupTabVM, IsDesignTimeCreatable=False}" 
             >
    <!--<Border Grid.Column="0" Grid.Row="1" BorderThickness="2" BorderBrush="LightGray" Margin="10" Padding="10" CornerRadius="10" >-->
    <Grid Margin="20" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Width="auto" Margin="0,0,0,0" HorizontalAlignment="Stretch"  >


            <TextBlock Text="Basic Settings:"  Margin="0,0,0,0" FontSize="13" FontWeight="Bold"/>

            <StackPanel>
                <RadioButton x:Name="radioButton"  Content="Quick Setup" IsChecked="{Binding quickSetup}" Margin="0,10,0,0" >
                    <RadioButton.ToolTip>
                        Quick Setup uses your Arduino installation to generate the project.
                    </RadioButton.ToolTip>
                </RadioButton>
                <RadioButton x:Name="radioButton1"  Content="Expert Setup" IsChecked="True" Margin="0,5,0,0" >
                    <RadioButton.ToolTip>
                        Expert Setup allows to choose the compiler and used core libraries independently of your Arduino installation.
                    </RadioButton.ToolTip>
                </RadioButton>
            </StackPanel>

            <Label   Content="Arduino folder:" FontSize="11" FontWeight="SemiBold"  Padding="0" Margin="0,10,0,0" />
            <local:PSelector SelectedPath="{Binding arduinoBase, ValidatesOnDataErrors=True}" isFolderDialog="True" Style="{DynamicResource ValidatingControl}"  />

            <Label   Content="GNU make" FontSize="11" FontWeight="SemiBold" Padding="0" Margin="0,10,0,0" />
            <local:PSelector SelectedPath="{Binding  makePath, ValidatesOnDataErrors=True}" Style="{DynamicResource ValidatingControl}"  />

            <TextBlock Text="Uploaders:"  Margin="0,20,0,0" FontSize="13" FontWeight="Bold"/>


            <Label   Content="PJRC Uploader (Folder containing Teensy.exe)" FontSize="11" FontWeight="SemiBold" Padding="0" Margin="0,10,0,0" />
            <local:PSelector SelectedPath="{Binding  uploadPjrcPath, ValidatesOnDataErrors=True}" isFolderDialog="True" Style="{DynamicResource ValidatingControl}" />

            <Label   Content="TyCommander - optional (folder containing TyCommanderC.exe)" FontSize="10" Padding="0" Margin="0,10,0,0" />
            <local:PSelector SelectedPath="{Binding  uploadTyPath, ValidatesOnDataErrors=True}" isFolderDialog="True" Style="{DynamicResource ValidatingControl}" />

            <Label   Content="CLI loader - optional (folder containing Teensy_loader_cli.exe)" FontSize="10" Padding="0" Margin="0,10,0,0" />
            <local:PSelector SelectedPath="{Binding  uploadCLIPath, ValidatesOnDataErrors=True}" isFolderDialog="True" Style="{DynamicResource ValidatingControl}" />
        </StackPanel>

        <Separator Grid.Column="1" Width="1" Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"  />

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Enhanced Settings" Grid.Row="0" Margin="0,0,0,0" FontSize="13" FontWeight="Bold"/>

            
            <Label   Content="Additional items for makefile" Grid.Row="1" FontSize="11" FontWeight="SemiBold"  Padding="0" Margin="0,10,0,0" />
            <TextBox VerticalAlignment="Stretch" FontFamily="courier new" FontSize="13" TextWrapping="NoWrap" AcceptsReturn="True" Grid.Row="2"/>


        </Grid>



    </Grid>
    <!--</Border>-->
</UserControl>
