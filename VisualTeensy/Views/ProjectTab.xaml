<UserControl x:Class="Board2Make.ProjectTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Board2Make"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">

    
    <Grid Margin="20" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Grid.Row="1" BorderThickness="2" BorderBrush="LightGray" Margin="10" Padding="10" CornerRadius="10" >
            <Grid VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <!--<RowDefinition Height="auto"/>-->
                    <RowDefinition Height="*"/>

                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Column="0" Grid.Row="0" Width="400">

                    <RadioButton x:Name="radioButton"  Content="Quick Setup" IsChecked="{Binding quickSetup}" Margin="0,10,0,5">
                        <RadioButton.ToolTip>
                            Quick Setup uses your Arduino installation to generate the project.
                        </RadioButton.ToolTip>
                    </RadioButton>
                    <RadioButton x:Name="radioButton1"  Content="Expert Setup"  >
                        <RadioButton.ToolTip>
                            Expert Setup allows to choose the compiler and used core libraries independently of your Arduino installation. 
                        </RadioButton.ToolTip>
                    </RadioButton>

                    <!--Project Information ____________________________-->
                    
                    <TextBlock Text="Project Information:" FontWeight="Bold" FontSize="11" Margin="0,20,0,5"/>
                    <StackPanel Width="auto"  HorizontalAlignment="Stretch" x:Name="ProjectSettings" Style="{DynamicResource ValidatingControl}" >
                        <!--<TextBlock Text="Project" FontWeight="Bold" />-->

                        <Label   Content="Project Name (defines names of output files *.hex, *.elf ...)" HorizontalAlignment="Left" FontSize="10" Padding="0" Margin="0,5,0,0" />
                        <TextBox Text="{Binding projectName, ValidatesOnDataErrors=True}" Margin="0,0,33,0"  />

                        <Label   Content="Project Path" FontSize="10" Padding="0" Margin="0,5,0,0"  />
                        <local:PSelector SelectedPath="{Binding  projectPath, ValidatesOnDataErrors=True}" isFolderDialog="True" Style="{DynamicResource ValidatingControl}" />
                    </StackPanel>

                    <!--Expert Setup ____________________________________ -->

                    <StackPanel Width="auto" Margin="0,20,0,0"  HorizontalAlignment="Stretch"  Visibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=radioButton1}" x:Name="Expert_Settings">
                        <TextBlock Text="Details:" FontWeight="Bold" FontSize="11" Margin="0,0,0,5"/>
                        <Label   Content="Path to boards.txt" FontSize="10" Padding="0" />
                        <local:PSelector SelectedPath="{Binding boardTxtPath, ValidatesOnDataErrors=True}" />
                        <CheckBox Content="Copy to project folder? (recommended)" FontSize="10" IsChecked="{Binding copyBoardTxt}"/>

                        <Label   Content="Path to Teensy Core Library" FontSize="10" Padding="0" Margin="0,15,0,0" />
                        <local:PSelector SelectedPath="{Binding corePath, ValidatesOnDataErrors=True}" isFolderDialog="True"  />
                        <CheckBox Content="Copy to project folder (recommended)" FontSize="10" IsChecked="{Binding copyCore}"/>

                        <Label   Content="Compiler Folder" FontSize="10" Padding="0" Margin="0,15,0,0" />
                        <local:PSelector SelectedPath="{Binding compilerPath, ValidatesOnDataErrors=True}" isFolderDialog="True" />
                    </StackPanel>

                    <!--Quick Setup ____________________________________ -->
                    
                    <StackPanel Width="auto" Margin="0,20,0,0" HorizontalAlignment="Stretch"  Visibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=radioButton}" x:Name="Quick_Settings">
                        <TextBlock Text="Arduino:" FontWeight="Bold" FontSize="11" Margin="0,0,0,5"/>
                        <Label   Content="Path to your Arduino installation" FontSize="10" Padding="0" />
                        <local:PSelector SelectedPath="{Binding arduinoBase, ValidatesOnDataErrors=True}" isFolderDialog="True" />
                    </StackPanel>

                    <TextBlock Text="Board Properties:" FontWeight="Bold" FontSize="11" Margin="0,20,0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,20,33,10" Width="auto" HorizontalAlignment="Stretch"  >
                        <Label Content="Board:" Width="100" Padding="0" />
                        <ComboBox ItemsSource="{Binding boardVMs, ValidatesOnDataErrors=True}" DisplayMemberPath="boardName" Width="210" SelectedItem="{Binding selectedBoard}" />
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding selectedBoard.optionSetVMs, ValidatesOnDataErrors=True}" Margin="0,0,0,15">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" >
                                    <Label Content="{Binding name}" Width="100" Padding="0" />
                                    <ComboBox ItemsSource="{Binding options}" DisplayMemberPath="name"  Width="210" SelectedItem="{Binding selectedOption}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>


                </StackPanel>
                <Button Grid.Row="1" Margin="0,0,0,0"  HorizontalAlignment="Right" Background="Transparent" Command="{Binding cmdGenerate}" >
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/img/content-save.png"  Width="24" Height="24" />
                        <TextBlock Text="Generate / Update Project" VerticalAlignment="Center" Margin="5,0,10,0"/>
                    </StackPanel>
                </Button>
                <!--</Grid>-->
            </Grid>
        </Border>
        <Border Grid.Column="1" Grid.Row="1" BorderThickness="2" BorderBrush="LightGray" Margin="10" Padding="10" CornerRadius="10" >
            <Grid Margin="1,-1,-1,1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>


                <TextBlock Text="{Binding makeFileName}"   />
                <Border BorderBrush="DarkGray" BorderThickness="1" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="2" >
                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Padding="5">
                        <TextBox Background="Transparent" FontFamily="Courier New" FontSize="13" BorderThickness="0" 
                         Text="{Binding makefile, Mode=OneWay}" IsReadOnly="True"  />
                    </ScrollViewer>
                </Border>


