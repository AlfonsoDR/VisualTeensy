<UserControl x:Class="VisualTeensy.ProjectTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualTeensy"
             xmlns:vm="clr-namespace:ViewModel"
             mc:Ignorable="d" 
             Background="White"
             d:DataContext="{d:DesignInstance vm:ProjectTabVM, IsDesignTimeCreatable=False}"
             d:DesignHeight="600" d:DesignWidth="800" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">


    <Grid Margin="10" >
        <Grid.ColumnDefinitions>
            <!--<ColumnDefinition Width="auto"/>-->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Grid.Row="0" BorderThickness="2" BorderBrush="LightGray" Margin="10" Padding="10" CornerRadius="10" >
            <Grid VerticalAlignment="Stretch">
                <Grid.RowDefinitions>                    
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Grid.Row="0" HorizontalAlignment="Stretch"   Margin="0,0,50,0">
                    <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="radioButton"  Content="Quick Setup" IsChecked="{Binding quickSetup}">
                        <RadioButton.ToolTip>
                            Quick Setup uses your Arduino installation to generate the project.
                        </RadioButton.ToolTip>
                    </RadioButton>
                    <RadioButton x:Name="radioButton1"  Content="Expert Setup" IsChecked="True" Margin="20,0,0,0" >
                        <RadioButton.ToolTip>
                            Expert Setup allows to choose the compiler and used core libraries independently of your Arduino installation.
                        </RadioButton.ToolTip>
                    </RadioButton>
                    </StackPanel>

                    <TextBlock Text="Project Folder:" FontWeight="Bold" FontSize="11" Margin="0,15,0,0"/>
                    <!--<Label   Content="Project Folder" HorizontalAlignment="Left" FontSize="10" Padding="0" Margin="0,5,0,0" />-->
                    <local:PSelector SelectedPath="{Binding projectPath, ValidatesOnDataErrors=True}" isFolderDialog="True" Style="{DynamicResource ValidatingControl}" />

          
                    <!--Expert Setup ____________________________________ -->
                    <StackPanel Width="auto" Margin="0,15,0,0"  HorizontalAlignment="Stretch"  Visibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=radioButton1}" x:Name="Expert_Settings">
                        <TextBlock Text="Details:" FontWeight="Bold" FontSize="11" Margin="0,0,0,5"/>
                        <Label   Content="Path to boards.txt" FontSize="10" Padding="0" />
                        <local:PSelector SelectedPath="{Binding boardTxtPath, ValidatesOnDataErrors=True}" Style="{DynamicResource ValidatingControl}" />
                        <CheckBox Content="Copy to project folder? (recommended)" FontSize="10" IsChecked="{Binding copyBoardTxt}"/>

                        <Label   Content="Path to Teensy Core Library" FontSize="10" Padding="0" Margin="0,15,0,0" />
                        <local:PSelector SelectedPath="{Binding corePath, ValidatesOnDataErrors=True}" Style="{DynamicResource ValidatingControl}" isFolderDialog="True"  />
                        <CheckBox Content="Copy to project folder (recommended)" FontSize="10" IsChecked="{Binding copyCore}"/>

                        <Label   Content="Compiler Folder" FontSize="10" Padding="0" Margin="0,15,0,0" />
                        <local:PSelector SelectedPath="{Binding compilerPath, ValidatesOnDataErrors=True}" Style="{DynamicResource ValidatingControl}" isFolderDialog="True" />
                    </StackPanel>

                    <!--Quick Setup ____________________________________ -->
                    <StackPanel Width="auto" Margin="0,15,0,0" HorizontalAlignment="Stretch"  Visibility="{Binding IsChecked, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=radioButton}" x:Name="Quick_Settings">
                        <TextBlock Text="Arduino Folder:" FontWeight="Bold" FontSize="11" Margin="0,0,0,0"/>
                        <!--<Label   Content="Path to your Arduino installation" FontSize="10" Padding="0" />-->
                        <local:PSelector SelectedPath="{Binding arduinoBase, ValidatesOnDataErrors=True}" isFolderDialog="True" Style="{DynamicResource ValidatingControl}"  />
                    </StackPanel>

                    <TextBlock Text="Board Properties:" FontWeight="Bold" FontSize="11" Margin="0,15,0,5"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10"  HorizontalAlignment="Left"  >
                        <Label Content="Board:" Width="100" Padding="0" />
                        <ComboBox ItemsSource="{Binding boardVMs, ValidatesOnDataErrors=True}" DisplayMemberPath="boardName" Width="200" SelectedItem="{Binding selectedBoard}" />
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding selectedBoard.optionSetVMs, ValidatesOnDataErrors=True}" Margin="0,0,0,15">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10"  >
                                    <Label Content="{Binding name}" Width="100" Padding="0" />
                                    <ComboBox ItemsSource="{Binding options}" DisplayMemberPath="name" Width="200" SelectedItem="{Binding selectedOption}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>


                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="0" >
                    <TextBlock  FontWeight="Bold" FontSize="14" Text="Libraries"/>
                    <ListBox Height="200" Width="200" HorizontalAlignment="Left" ItemsSource="{Binding libManagerVM.libs}" DisplayMemberPath="name"/>
                </StackPanel>

                <!--</Grid>-->
            </Grid>
        </Border>
        
        <Button Grid.Row="1" Margin="0,0,10,0"  HorizontalAlignment="Right" Background="Transparent" Command="{Binding cmdGenerate}" BorderBrush="DarkGray"  >
            <StackPanel Orientation="Horizontal">
                <Image Source="/img/content-save.png"  Width="24" Height="24" />
                <TextBlock Text="Generate Project" VerticalAlignment="Center" Margin="5,0,10,0"/>
            </StackPanel>
        </Button>
        <Button Grid.Row="1" Margin="10,0,0,0"  HorizontalAlignment="Left" Background="Transparent" Click="Button_Click" BorderBrush="DarkGray" >
            <StackPanel Orientation="Horizontal">
                <!--<Image Source="/img/content-save.png"  Width="24" Height="24" />-->
                <TextBlock Text="Show Files" VerticalAlignment="Center" Margin="5,0,10,0"/>
            </StackPanel>
        </Button>


    </Grid>
</UserControl>
