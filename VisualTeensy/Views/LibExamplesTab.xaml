    <Grid>
        <StackPanel>
            <md:Flipper
                Style="{StaticResource MaterialDesignCardFlipper}"           
                VerticalAlignment="Top"
              >
                <md:Flipper.FrontContent>
                    <StackPanel Orientation="Horizontal">
                        <Button
                            Style="{StaticResource MaterialDesignRaisedLightButton}"
                            Command="{x:Static md:Flipper.FlipCommand}"
                            Height="180" VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                            
                            <Button.Content>
                            <StackPanel>
                                <TextBlock Text="Teensy 4.1 @600MHz" FontSize="18"  Margin="0,0,0,10"/>
                                    <StackPanel Orientation="Horizontal" TextBlock.Foreground="Black">
                                        <md:PackIcon Kind="Usb" Height="20" Width="25" VerticalAlignment="Center" Margin="-8,0,0,0"/>
                                        <TextBlock Text="Serial" VerticalAlignment="Center"/>
                                        <md:PackIcon Kind="Keyboard" Height="20" Width="25" VerticalAlignment="Center"/>
                                        <TextBlock Text="German" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">                                        
                                        <TextBlock Text="Optimize: Faster" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </Button.Content>

                        </Button>
                     </StackPanel>
                </md:Flipper.FrontContent>

        <md:Flipper.BackContent>
                    <Grid
                        Height="256"
                        Width="200">
                        <Grid.RowDefinitions>
                            <RowDefinition
                                Height="Auto" />
                            <RowDefinition
                                Height="*" />
                        </Grid.RowDefinitions>
                        <md:ColorZone
                            Padding="6">
                            <StackPanel
                                Orientation="Horizontal">
                                <Button
                                    Style="{StaticResource MaterialDesignToolForegroundButton}"
                                    Command="{x:Static md:Flipper.FlipCommand}"
                                    HorizontalAlignment="Left">
                                    <md:PackIcon             Kind="ArrowLeft"              HorizontalAlignment="Right" />
                                </Button>
                                <TextBlock
                                    Margin="8 0 0 0"
                                    VerticalAlignment="Center"
                                    Text="EDIT USER" />
                            </StackPanel>
                        </md:ColorZone>
                        <Grid
                            Grid.Row="1"
                            Margin="0 6 0 0"
                            HorizontalAlignment="Center"                        
                            VerticalAlignment="Top"
                            Width="172">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBox
                                md:HintAssist.Hint="First name"
                                md:HintAssist.IsFloating="True"
                                Margin="0 12 0 0"
                                Text="James" />
                            <TextBox
                                Grid.Row="1"
                                md:HintAssist.Hint="Last name"
                                md:HintAssist.IsFloating="True"
                                Margin="0 12 0 0"
                                Text="Willock" />
                            <StackPanel
                                Grid.Row="2"
                                Orientation="Horizontal"
                                Margin="0 12 0 0"
                                HorizontalAlignment="Right">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Text="Email Contact" />
                                <ToggleButton
                                    Margin="8 0 0 0" />
                            </StackPanel>
                            <StackPanel
                                Grid.Row="3"
                                Orientation="Horizontal"
                                Margin="0 12 0 0"
                                HorizontalAlignment="Right">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Text="Telephone Contact" />
                                <ToggleButton
                                    Margin="8 0 0 0" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </md:Flipper.BackContent>
            </md:Flipper>
            <Button Content="asdfasdf" HorizontalAlignment="Left"/>

        </StackPanel>
    </Grid>
</UserControl>
